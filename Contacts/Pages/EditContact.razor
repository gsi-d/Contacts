@page "/contact/edit/{idContact}"
@using System.Reflection.Metadata
@using System.Text
@using Contacts.Shared

@{
    if (isLoading)
    {
        <div class="d-flex justify-content-center align-items-center mb-3 mt-3">
            <h3>Edit Contact</h3>
        </div>
        <text>Carregando...</text>
    }
    else
    {
        <div class="d-flex justify-content-center align-items-center mb-3 mt-3">
            <h3>Edit Contact</h3>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <EditForm Model="@Contact" OnValidSubmit="@UpdateAsync" FormName="form">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="d-flex flex-column mb-3 ">
                    <label for="name">Id:</label>
                    <InputNumber disabled id="id" class="rounded-3" @bind-Value="Contact.Id" />
                </div>
                <div class="d-flex flex-column mb-3 ">
                    <label for="name">Name:</label>
                    <InputText id="name" class="rounded-3" @bind-Value="Contact.Name" />
                </div>
                <div class="d-flex flex-column mb-3 ">
                    <label for="contactNumber">Contact Number:</label>
                    <InputText id="contactNumber" class="rounded-3" @bind-Value="Contact.ContactNumber" />
                </div>
                <div class="d-flex flex-column mb-3">
                    <label for="email">Email:</label>
                    <InputText id="email" class="rounded-3" @bind-Value="Contact.Email" />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn-success rounded-3">Submit</button>
                </div>
            </EditForm>
        </div>
    }
}

